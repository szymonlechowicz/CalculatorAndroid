<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/n8"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/eight"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/n9"
        app:layout_constraintStart_toEndOf="@+id/n9" />

    <Button
        android:id="@+id/multiply"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/multiply"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/n7"
        app:layout_constraintStart_toEndOf="@+id/n7" />

    <Button
        android:id="@+id/n7"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/seven"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/n8"
        app:layout_constraintStart_toEndOf="@+id/n8" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="right"
        android:text="@string/Calculator"
        android:textSize="70dp"
        app:layout_constraintBottom_toTopOf="@+id/ac"
        app:layout_constraintEnd_toEndOf="@+id/divide" />

    <Button
        android:id="@+id/ac"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:padding="4dp"
        android:text="@string/AC"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/n9"
        app:layout_constraintStart_toStartOf="@+id/n9" />

    <Button
        android:id="@+id/sign"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:padding="4dp"
        android:text="@string/sign"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/ac"
        app:layout_constraintStart_toEndOf="@+id/ac" />

    <Button
        android:id="@+id/percentage"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/percent"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/sign"
        app:layout_constraintStart_toEndOf="@+id/sign" />

    <Button
        android:id="@+id/divide"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/divide"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/percentage"
        app:layout_constraintStart_toEndOf="@+id/percentage" />

    <Button
        android:id="@+id/n9"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/nine"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/n6"
        app:layout_constraintStart_toStartOf="@+id/n6" />

    <Button
        android:id="@+id/n6"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/six"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/n3"
        app:layout_constraintStart_toStartOf="@+id/n3" />

    <Button
        android:id="@+id/n5"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/five"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/n6"
        app:layout_constraintStart_toEndOf="@+id/n6" />

    <Button
        android:id="@+id/n4"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/four"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/n5"
        app:layout_constraintStart_toEndOf="@+id/n5" />

    <Button
        android:id="@+id/subtract"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/subtract"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/n4"
        app:layout_constraintStart_toEndOf="@+id/n4" />

    <Button
        android:id="@+id/n3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/three"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/n0"
        app:layout_constraintStart_toStartOf="@+id/n0" />

    <Button
        android:id="@+id/n2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/two"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/n3"
        app:layout_constraintStart_toEndOf="@+id/n3" />

    <Button
        android:id="@+id/n1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/one"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/n2"
        app:layout_constraintStart_toEndOf="@+id/n2" />

    <Button
        android:id="@+id/add"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/add"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/n1"
        app:layout_constraintStart_toEndOf="@+id/n1" />

    <Button
        android:id="@+id/n0"
        android:layout_width="418dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="32dp"
        android:text="@string/zero"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/dot"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/dot"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/n0"
        app:layout_constraintStart_toEndOf="@+id/n0" />

    <Button
        android:id="@+id/equals"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/equals"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/dot"
        app:layout_constraintStart_toEndOf="@+id/dot" />

    <TextView
        android:id="@+id/history"
        android:layout_width="574dp"
        android:layout_height="603dp"
        android:layout_marginStart="128dp"
        android:gravity="left"
        android:text="@string/history"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/text"
        app:layout_constraintTop_toTopOf="@+id/text" />

</androidx.constraintlayout.widget.ConstraintLayout>